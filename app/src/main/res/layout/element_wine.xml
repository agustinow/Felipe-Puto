<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="60dp" android:id="@+id/constraintElementWine">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/imgElementWine"
            android:scaleType="fitCenter" app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtElementWineName" app:layout_constraintStart_toEndOf="@+id/imgElementWine"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgElementWine"
            app:layout_constraintBottom_toBottomOf="@+id/imgElementWine" tools:text="Jus de Raymond"
            android:textSize="18sp" android:fontFamily="sans-serif-light" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/txtElementWinePrice" android:lines="1" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imgElementWineColor"
            app:layout_constraintTop_toTopOf="@+id/btnElementWineCart"
            app:layout_constraintBottom_toBottomOf="@+id/btnElementWineCart" app:layout_constraintDimensionRatio="1:1"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            tools:srcCompat="@drawable/grape_normal" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btnElementWineCart"
            android:background="@drawable/icon_cart_nobg" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintDimensionRatio="1:1"
            android:scaleType="fitCenter" android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp" android:layout_marginEnd="8dp" android:padding="8dp"
            android:cropToPadding="false" android:adjustViewBounds="false"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtElementWinePrice" app:layout_constraintEnd_toStartOf="@+id/imgElementWineColor"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/txtElementWineName"
            app:layout_constraintHorizontal_bias="0.5" tools:text="$570" android:fontFamily="sans-serif-light"
            android:textSize="18sp" android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imgElementWineColor"
            app:layout_constraintBottom_toBottomOf="@+id/imgElementWineColor"/>
</androidx.constraintlayout.widget.ConstraintLayout>